{
    "name": "corex/debug",
    "type": "library",
    "description": "Various helpers for debugging code.",
    "license": "MIT",
    "keywords": [
        "debug"
    ],
    "authors": [
        {
            "name": "CoRex",
            "email": "dev@corex.dk"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "symfony/var-dumper": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "CoRex\\Debug\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\CoRex\\Debug\\": "tests"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage vendor/bin/phpunit"
    }
}
